<Window x:Class="Capstan.AccentOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AccentOverlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        Focusable="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="Manual">

    <Border Background="#E8E8E8" BorderBrush="#666666" BorderThickness="1" CornerRadius="12" Padding="12">
        <StackPanel>
            <!-- Header with icon and base character -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <Image x:Name="AppIcon" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBlock Text="Accents for " 
                           FontSize="14" 
                           Foreground="#666666"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="BaseCharLabel" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="#444444"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <ItemsControl x:Name="AccentItems">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ItemBorder" 
                                Background="{Binding Background}" 
                                CornerRadius="8" 
                                Padding="12,8" 
                                Margin="4"
                                Cursor="Hand"
                                MouseLeftButtonDown="AccentItem_Click">
                            <StackPanel>
                                <TextBlock Text="{Binding Character}" 
                                           FontSize="36" 
                                           FontWeight="SemiBold"
                                           Foreground="{Binding Foreground}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding NumberLabel}" 
                                           FontSize="14" 
                                           Foreground="{Binding NumberForeground}"
                                           HorizontalAlignment="Center"
                                           Margin="0,-2,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</Window>